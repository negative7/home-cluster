#!/usr/bin/env sh

DEBUG=${DEBUG:--d}
CONTAINER_NAME="coredns"

if podman container exists ${CONTAINER_NAME}; then
  podman start ${CONTAINER_NAME}
else
  podman run -d --network coredns --restart always  \
    --name $CONTAINER_NAME \
    -v "/mnt/data/coredns-workdir/:/config/" \
    --hostname coredns \
    ghcr.io/k8s-at-home/coredns
fi
